{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "xangularApplicationGenerator",
  "title": "xangular Application Generator",
  "description": "Generates a xangular application.",
  "type": "object",
  "properties": {
    "applicationName": {
      "type": "string",
      "description": "The name of the application.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What name would you like to use for the application?",
      "pattern": "^[a-zA-Z].*$"
    }
  },
  "required": ["applicationName"],
  "additionalProperties": false
}
